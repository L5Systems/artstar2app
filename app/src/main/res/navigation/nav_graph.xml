<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.artest2.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_StateInputFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>


        <fragment
            android:id="@+id/StateInputFragment"
            android:name="com.example.artest2.ui.statedialogs.StateInputFragment"
            android:label="Input"
            tools:layout="@layout/fragment_state_input">
            <!-- Define arguments for type safety with Safe Args -->
            <argument
                android:name="requestId"
                app:argType="string" />
            <argument
                android:name="dialogType"
                app:argType="com.example.artest2.DialogManager$DialogType" /> <!-- Adjust package -->
            <argument
                android:name="title"
                app:argType="string" />
            <argument
                android:name="message"
                app:argType="string"
                app:nullable="true"
                android:defaultValue="@null" />
            <argument
                android:name="positiveButtonText"
                app:argType="string"
                android:defaultValue="Confirm" />
            <argument
                android:name="negativeButtonText"
                app:argType="string"
                android:defaultValue="Cancel" />
            <argument
                android:name="inputHint"
                app:argType="string"
                app:nullable="true"
                android:defaultValue="@null" />
            <argument
                android:name="items"
                app:argType="string[]"
                app:nullable="true"
                android:defaultValue="@null" />
            <argument
                android:name="initialSelection"
                app:argType="string"
                app:nullable="true"
                android:defaultValue="@null" />
            <!-- Add other arguments from UiAction.ShowDialogActivity as needed -->
        </fragment>


    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.artest2.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <!-- Action to navigate to fragment_ssel_select_state -->
        <action
            android:id="@+id/action_navigation_home_to_fragment_ssel_select_state"
            app:destination="@id/VesselSelectStateFrag" />
    </fragment>
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.artest2.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.artest2.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <!-- Target Destination -->
    <fragment
        android:id="@+id/VesselSelectStateFrag"
        android:name="com.example.artest2.ui.statedialogs.VesselSelectStateFrag"
        android:label="VesselSelect"
        tools:layout="@layout/fragment_notifications" />

</navigation>